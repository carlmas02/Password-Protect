<MainScreen>
    name :"main"

    Screen:
        

        MDBoxLayout:
            orientation: "vertical"

            MDToolbar :
                id :"bar"
                title : "My Vault"
                font_name : "semibold"
                right_action_items: [["dots-vertical", lambda x: app.callback(x)]]

            ScrollView:
                MDList :
                    id : list_tray
                                
        
    MDFloatingActionButton:
        icon: 'account-plus'
        pos_hint : {"center_x":0.8,"center_y":0.1}
