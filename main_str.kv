ScreenManager:
    LoginScreen:
    SignupScreen:
    MainScreen:
    DetailScreen:
    AccountScreen:
    UpdateScreen:

<LoginScreen>

    name : "login_screen"
    MDLabel:
        
        text:"Login"
        pos_hint : {"center_x" : 0.63,"center_y" : 0.7}
        font_name:"semibold"
        font_size:23
        theme_text_color:"Custom"
        text_color: (0,1,0,1)

    MDLabel:
  
        text:"Please Login to continue"
        pos_hint : {"center_x" : 0.63,"center_y" : 0.65}
        font_name:"Light"
        font_size:15
 
    MDCard:
        focus_behavior: True
        size_hint: None, None
        size: "270dp", "170dp"
        pos_hint: {"center_x": .5, "center_y": .45}
        elevation :50
               

    MDTextField:
        id : username
        hint_text : "Username"
        pos_hint : {"center_x":0.5,"center_y":0.52}
        icon_right : "account"
        icon_right_color : app.theme_cls.primary_color
        halign: "left"
        size_hint_x : None
        width : 250

        

    MDTextField:
        id : password
        hint_text : "Password"
        pos_hint : {"center_x":0.5,"center_y":0.4}
        icon_right : "eye-off"
        icon_right_color : app.theme_cls.primary_color
        halign: "left"
        size_hint_x : None
        width : 250
        password : True

    MDRoundFlatButton:
        text : "Login"
        font_name:"semibold"
        pos_hint:{"center_x":0.75,"center_y":0.25}
        on_press: app.check()


    MDLabel:
  
        text:"Don't have an account?"
        pos_hint : {"center_x" : 0.54,"center_y" : 0.1}
        font_name:"Light"
        font_size:15

    MDRoundFlatButton:
        text : "Signup"
        font_name:"semibold"
        pos_hint:{"center_x":0.79,"center_y":0.1}
        on_press: root.manager.current= 'signup_new'


